<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #FDE68A 0%, #F59E0B 100%);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.oop.gruppo14bibliotecauniversitaria.control.modifyUserController">

    <!-- BOTTONE INDIETRO -->
    <Button fx:id="backButton" onAction="#backPage" style="-fx-background-color: #FF7043; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 18;" text="Indietro" AnchorPane.leftAnchor="30" AnchorPane.topAnchor="30">
        <effect>
             <DropShadow color="#00000075" />
        </effect>
    </Button>

    <!-- LAYOUT CENTRALE -->
    <VBox alignment="CENTER" maxHeight="1000" maxWidth="800" prefHeight="750" prefWidth="500" spacing="25" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="100">
        <children>
        
            <!-- HEADER CARD -->
            <VBox alignment="CENTER" maxWidth="450" prefWidth="450" spacing="8" style="-fx-background-color: #f57c3c; -fx-background-radius: 16 16 0 0; -fx-padding: 10 30 0 30;">
                <children>
                    <Label style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ“š Biblioteca UNISA" />
                    <Label fx:id="labelMessage" style="-fx-font-size: 14; -fx-text-fill: #ffe0b2;" text="Inserimento Libro" />
                </children>
            </VBox>
            
            <!-- CARD CENTRALE FORM -->
            <VBox alignment="CENTER" maxWidth="450" prefWidth="450" spacing="18" style="-fx-background-color: white; -fx-background-radius: 0 0 16 16; -fx-padding: 40 30 40 30;">
                <effect>
                    <DropShadow color="#00000033" offsetY="4" radius="20" />
                </effect>
                <children>
                    <!-- Barra di ricerca -->
                    <HBox alignment="CENTER" maxWidth="450" prefWidth="450" spacing="15">
                        <children>
                            <TextField fx:id="searchField" maxWidth="300" prefWidth="300" promptText="Cerca libro..." style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" HBox.hgrow="ALWAYS" />
                            <Button fx:id="searchButton" maxWidth="70" onAction="#search" style="-fx-background-color: #FF7043; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="ðŸ”" HBox.hgrow="NEVER">
                                <effect>
                                    <DropShadow color="#00000033" radius="3" />
                                </effect>
                            </Button>
                        </children>
                    </HBox>

                    <!-- Campi del form -->
                    <TextField fx:id="titleField" maxWidth="250" prefWidth="250" promptText="Titolo" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <TextField fx:id="authorsField" maxWidth="250" prefWidth="250" promptText="Autori" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <TextField fx:id="publicationYearField" maxWidth="250" prefWidth="250" promptText="Anno di pubblicazione" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <TextField fx:id="ISBNField" maxWidth="250" prefWidth="250" promptText="ISBN" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <TextField fx:id="availableCopiesField" maxWidth="250" prefWidth="250" promptText="Numero di copie disponibili" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />

                    <!-- Bottoni in fondo al form -->
                    <HBox alignment="CENTER" spacing="15">
                        <Button fx:id="confirmButton" maxWidth="250" onAction="#confirm" prefWidth="250" style="-fx-background-color: #FF7043; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14;" text="Conferma modifiche">
                            <effect>
                                <DropShadow color="#00000033" radius="5" />
                            </effect>
                        </Button>
                    </HBox>

                </children>
            </VBox>

            <!-- Footer -->
            <Label style="-fx-font-size: 12; -fx-text-fill: #777;" text="UniversitÃ  degli Studi di Salerno" />
        </children>
    </VBox>

</AnchorPane>
