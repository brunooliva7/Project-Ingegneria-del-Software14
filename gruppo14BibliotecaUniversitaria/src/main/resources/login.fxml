<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #FDE68A 0%, #F59E0B 100%);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.oop.gruppo14bibliotecauniversitaria.control.loginController">

    <VBox alignment="CENTER" maxHeight="800" maxWidth="800" prefHeight="500" prefWidth="450" spacing="0">

        <!-- HEADER CARD -->
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f57c3c;                       -fx-background-radius: 16 16 0 0;                      -fx-padding: 25 20 25 20;">
            <children>
                <Label style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ“š Biblioteca UNISA" />
                <Label   style="-fx-font-size: 14; -fx-text-fill: #ffe0b2;" text="Area Riservata Bibliotecario" />
            </children>
        </VBox>

        <!-- CARD CENTRALE LOGIN -->
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white;                       -fx-background-radius: 0 0 16 16;                       -fx-padding: 40;">
            <effect>
                <DropShadow color="#00000033" offsetY="4" radius="20" />
            </effect>
            <children>

                <!-- Username -->
                <TextField fx:id="usernameField" maxWidth="250" prefWidth="250" promptText="Username" style="-fx-background-radius: 8;                                    -fx-border-radius: 8;                                    -fx-border-color: #FF7043;                                    -fx-border-width: 1;                                    -fx-padding: 5;" />

                <!-- Password -->
                <PasswordField fx:id="passwordField" maxWidth="250" prefWidth="250" promptText="Password" style="-fx-background-radius: 8;                                        -fx-border-radius: 8;                                        -fx-border-color: #FF7043;                                        -fx-border-width: 1;                                        -fx-padding: 5;" />

                <!-- Bottone Login -->
                <Button fx:id="loginButton" maxWidth="250" onAction="#handleLogin" prefWidth="250" style="-fx-background-color: #FF7043;                                 -fx-text-fill: white;                                 -fx-font-weight: bold;                                 -fx-background-radius: 8;                                 -fx-font-size: 14;" text="Accedi">
                    <effect>
                        <DropShadow color="#00000033" radius="5" />
                    </effect>
                </Button>

                <!-- Footer -->
                <Label fx:id="labelModify"  style="-fx-text-fill: #0066ff; -fx-underline: true;" text="Password dimenticata?" />

            </children>
        </VBox>

    </VBox>
</StackPane>
