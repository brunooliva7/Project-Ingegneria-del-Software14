<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="750.0" prefWidth="1198.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #FDE68A 0%, #F59E0B 100%);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.oop.gruppo14bibliotecauniversitaria.control.searchLoanController">

    <children>
        <!-- BOTTONE INDIETRO -->
        <Button fx:id="backButton" onAction="#backPage" style="-fx-background-color: #F97316; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 10; -fx-padding: 8 16;" text="← Indietro" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
            <effect>
                <DropShadow color="#00000040" offsetY="2" radius="8" />
            </effect>
        </Button>

        <!-- LAYOUT CENTRALE -->
        <VBox alignment="TOP_CENTER" layoutX="52.0" maxHeight="600" maxWidth="1109.0" prefHeight="600" prefWidth="1109.0" spacing="20" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25;" AnchorPane.leftAnchor="52.0" AnchorPane.rightAnchor="37.0" AnchorPane.topAnchor="150">
            
            <effect>
                <DropShadow color="#00000035" offsetY="5" radius="20" />
            </effect>
            
            <children>
                <!-- TITOLO -->
                <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #374151;" text="Ricerca prestito" />
                
                <!-- Selezione Utente -->
                
                    <TextField fx:id="userSearchField" promptText="Cerca utente interessato tramite matricola o cognome:" style="-fx-font-size: 16; -fx-text-fill: #374151;" />
                     <TextField fx:id="bookSearchField" promptText="Cerca libro interessato tramite ISBN o titolo:" style="-fx-font-size: 16; -fx-text-fill: #374151;" />
            <Button fx:id="confirmButton" onAction="#search" prefHeight="41.0" prefWidth="219.0" style="-fx-background-color: #F97316; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 10; -fx-padding: 8 16;" text="Conferma">
               <effect>
                  <DropShadow color="#00000040" offsetY="2" radius="8" />
               </effect>
            </Button>
                    
                   
                
                <Label style="-fx-font-size: 16; -fx-text-fill: #374151;" text="Clicca sul prestito desiderato" />
                 <!-- TABLEVIEW -->
            <TableView fx:id="loanTableView" maxHeight="400" maxWidth="1100" prefHeight="400" prefWidth="1100" style="                             -fx-background-radius: 10;                             -fx-border-radius: 10;                             -fx-border-color: #E5E7EB;                             -fx-font-size: 13;">

                <columns>
                    <TableColumn fx:id="nomeColumn" prefWidth="150" text="Nome utente" />
                    <TableColumn fx:id="cognomeColumn" prefWidth="150" text="Cognome utente" />
                    <TableColumn fx:id="matricolaColumn" prefWidth="150" text="Matricola utente" />
                    <TableColumn fx:id="titoloColumn" prefWidth="150" text="Titolo libro" />
                    <TableColumn fx:id="autoriColumn" prefWidth="150" text="Autori libro" />
                    <TableColumn fx:id="isbnColumn" prefWidth="150" text="ISBN libro" />
                    <TableColumn fx:id="duedateColumn" prefWidth="150" text="Data restituzione" />
                </columns>
            </TableView>
                
                

                <!-- Footer -->
                <Label style="-fx-font-size: 12; -fx-text-fill: #777;" text="Università degli Studi di Salerno" />
            </children>
        </VBox>
    </children>
</AnchorPane>
