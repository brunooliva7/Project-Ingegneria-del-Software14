<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<AnchorPane style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #FDE68A 0%, #F59E0B 100%);" 
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="it.unisa.diem.oop.gruppo14bibliotecauniversitaria.control.searchBookController">

    <Button fx:id="backButton"
            text="â† Indietro"
            onAction="#backPage" 
            AnchorPane.leftAnchor="20"
            AnchorPane.topAnchor="20"
            style="-fx-background-color: #F97316; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 10; -fx-padding: 8 16;">
        <effect>
            <DropShadow color="#00000040" radius="8" offsetY="2"/>
        </effect>
    </Button>

    <VBox alignment="TOP_CENTER" 
          prefWidth="850" prefHeight="700" spacing="20" 
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="80">
        <padding>
            <Insets left="25" right="25" top="15"/>
        </padding>
        <children>
            <VBox alignment="CENTER" maxWidth="800" prefWidth="800" spacing="20" style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 30;">
                 <effect>
                    <DropShadow color="#00000033" offsetY="4" radius="20" />
                 </effect>
                <children>
                    <Label style="-fx-font-size: 24; -fx-text-fill: #F97316; -fx-font-weight: bold;" text="Ricerca Libro" />
                    
                    <HBox alignment="CENTER" spacing="10" maxWidth="750">
                        <children>
                            <TextField fx:id="searchField" 
                                       prefWidth="650"
                                       promptText="Cerca libro per titolo, autori o ISBN..." 
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" 
                                       HBox.hgrow="ALWAYS" />
                            <Button fx:id="searchButton" 
                                    onAction="#search" 
                                    prefHeight="35.0" prefWidth="35.0"
                                    style="-fx-background-color: #FF7043; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" 
                                    text="ðŸ”">
                                <effect>
                                    <DropShadow color="#00000033" radius="3" />
                                </effect>
                            </Button>
                        </children>
                    </HBox>
                    
                    <Label fx:id="labelMessage" 
                           style="-fx-font-size: 14; -fx-text-fill: #374151;" 
                           text="Inserisci un criterio di ricerca per visualizzare i risultati." />
                    
                    <TableView fx:id="bookTableView" 
                               prefHeight="400" prefWidth="750" 
                               VBox.vgrow="ALWAYS"
                               style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #E5E7EB; -fx-border-width: 1;">
                        <columns>
                            <TableColumn fx:id="titleColumn" text="Titolo" prefWidth="250"/>
                            <TableColumn fx:id="authorsColumn" text="Autori" prefWidth="180"/>
                            <TableColumn fx:id="publicationYearColumn" text="Anno Pubbl." prefWidth="100"/>
                            <TableColumn fx:id="ISBNColumn" text="ISBN" prefWidth="120"/>
                            <TableColumn fx:id="copiesColumn" text="Copie Disp." prefWidth="100"/>
                        </columns>
                    </TableView>
                    
                </children>
            </VBox>
            
            <Label style="-fx-font-size: 12; -fx-text-fill: #777;" text="UniversitÃ  degli Studi di Salerno" />
        </children>
    </VBox>
</AnchorPane>