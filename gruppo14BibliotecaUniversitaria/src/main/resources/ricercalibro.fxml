<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #FDE68A 0%, #F59E0B 100%);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.oop.gruppo14bibliotecauniversitaria.control.searchBookController">

    <Button fx:id="backButton"
            text="â† Indietro"
            onAction="#backPage" AnchorPane.leftAnchor="20"
            AnchorPane.topAnchor="20"
            style="-fx-background-color: #F97316; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 10; -fx-padding: 8 16;">
        <effect>
            <DropShadow color="#00000040" radius="8" offsetY="2"/>
        </effect>
    </Button>

    <VBox alignment="TOP_CENTER" prefWidth="450" spacing="15" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="80">
        <padding>
            <Insets left="25" right="25" />
        </padding>
        <children>
            <HBox alignment="CENTER" spacing="10">
                <children>
                    <TextField fx:id="searchField" 
                               prefWidth="300"
                               promptText="Cerca libro per titolo, autori o codice identificativo..." 
                               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;"
                               HBox.hgrow="ALWAYS" />
                    <Button fx:id="searchButton" 
                            onAction="#search" 
                            prefHeight="35.0" prefWidth="35.0"
                            style="-fx-background-color: #FF7043; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" 
                            text="ðŸ”">
                        <effect>
                            <DropShadow color="#00000033" radius="3" />
                        </effect>
                    </Button>
                </children>
            </HBox>
            
            <Label fx:id="labelMessage" 
                   style="-fx-font-size: 12; -fx-text-fill: #777;" 
                   text="Cerca un libro per visualizzarne i dettagli" />

            <VBox alignment="TOP_CENTER" maxWidth="400" spacing="15" style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 20;">
                 <effect>
                    <DropShadow color="#00000033" offsetY="4" radius="20" />
                 </effect>
                <children>
                    <Label style="-fx-font-size: 24; -fx-text-fill: #F97316; -fx-font-weight: bold;" text="DATI LIBRO" />
                    
                    <TextField fx:id="titleField" promptText="Titolo" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <TextField fx:id="authorsField" promptText="Autori" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <TextField fx:id="publicationYearField" promptText="Anno di pubblicazione" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    
                    <HBox alignment="CENTER" spacing="10">
                        <TextField fx:id="ISBNField" promptText="ISBN" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="availableCopiesField" promptText="Copie disponibili" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" HBox.hgrow="ALWAYS" />
                    </HBox>
                </children>
            </VBox>
        </children>
    </VBox>
</AnchorPane>