<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unisa.diem.oop.gruppo14bibliotecauniversitaria.control.modifyUserController"
            style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #FDE68A 0%, #F59E0B 100%);">

    <!-- Bottone Indietro -->
    <Button fx:id="backButton" text="â† Indietro"
            AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
            style="-fx-background-color: #F97316; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 10; -fx-padding: 8 16;">
        <effect>
            <DropShadow color="#00000040" radius="8" offsetY="2"/>
        </effect>
    </Button>

    <!-- Contenitore principale centrato -->
    <StackPane AnchorPane.topAnchor="80" AnchorPane.bottomAnchor="20"
               AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <VBox fx:id="mainContainer" spacing="20" alignment="TOP_CENTER" maxWidth="900">

            <!-- HEADER -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f57c3c; -fx-background-radius: 16 16 0 0; -fx-padding: 20;">
                <Label style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ“š Biblioteca UNISA"/>
                <Label style="-fx-font-size: 14; -fx-text-fill: #ffe0b2;" text="Modifica dati utenti"/>
            </VBox>

            <!-- Pannello di ricerca utenti -->
            <AnchorPane fx:id="searchPane" prefHeight="400"
                        style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 20; -fx-border-radius: 16; -fx-border-color: #E5E7EB; -fx-border-width: 1;">
                <children>
                    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10"
                          AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" maxWidth="600">

                        <!-- Ricerca -->
                        <HBox spacing="10">
                            <TextField fx:id="searchField" promptText="Cerca utente per nome o matricola" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="searchButton" text="Cerca"/>
                        </HBox>

                        <!-- Label messaggi -->
                        <Label fx:id="labelMessageSearch" style="-fx-text-fill: red;"/>

                        <!-- TableView utenti -->
                        <TableView fx:id="userTableView" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="nomeColumn" text="Nome" prefWidth="170"/>
                                <TableColumn fx:id="cognomeColumn" text="Cognome" prefWidth="170"/>
                                <TableColumn fx:id="matricolaColumn" text="Matricola" prefWidth="170"/>
                            </columns>
                        </TableView>

                    </VBox>
                </children>
            </AnchorPane>

            <!-- Pannello di modifica utente -->
            <AnchorPane fx:id="modifyPane" prefHeight="400"
                        style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 20; -fx-border-radius: 16; -fx-border-color: #E5E7EB; -fx-border-width: 1;">
                <children>
                    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10"
                          AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" maxWidth="600">

                        <!-- Label messaggi -->
                        <Label fx:id="labelMessageModify" style="-fx-text-fill: green;"/>

                        <!-- Form di modifica -->
                        <TextField fx:id="nameField" promptText="Nome"/>
                        <TextField fx:id="surnameField" promptText="Cognome"/>
                        <TextField fx:id="emailField" promptText="Email"/>
                        <TextField fx:id="numberidField" promptText="Matricola"/>
                        <Button fx:id="confirmButton" text="Conferma Modifica"
                                style="-fx-background-color: #FF7043; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
                    </VBox>
                </children>
            </AnchorPane>

        </VBox>
    </StackPane>

</AnchorPane>
