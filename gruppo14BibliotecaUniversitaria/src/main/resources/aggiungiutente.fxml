    <VBox alignment="CENTER" maxHeight="800" maxWidth="800" prefHeight="500" prefWidth="450" spacing="0">

        <!-- HEADER CARD -->
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f57c3c;  -fx-background-radius: 16 16 0 0;  -fx-padding: 25 20 25 20;">
