                <!-- Email -->
                <TextField fx:id="emailField" maxWidth="250" prefWidth="250" promptText="Email" style="-fx-background-radius: 8;  -fx-border-radius: 8;  -fx-border-color: #FF7043; -fx-border-width: 1;                                    -fx-padding: 5;" />

                <!-- Matricola -->
                <TextField fx:id="matricolaField" maxWidth="250" prefWidth="250" promptText="Matricola" style="-fx-background-radius: 8;  -fx-border-radius: 8;                                    -fx-border-color: #FF7043;                                    -fx-border-width: 1;                                    -fx-padding: 5;" />

                <!-- Bottone Aggiungi -->
                <Button fx:id="aggiungiButton" maxWidth="250" prefWidth="250" style="-fx-background-color: #FF7043; -fx-text-fill: white;  -fx-font-weight: bold;                                 -fx-background-radius: 8;                                 -fx-font-size: 14;" text="Aggiungi">
                    <effect>
                        <DropShadow color="#00000033" radius="5" />
