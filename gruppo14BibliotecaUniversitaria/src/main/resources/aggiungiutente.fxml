<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #FDE68A 0%, #F59E0B 100%);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.oop.gruppo14bibliotecauniversitaria.control.addUserController">

    <!-- BOTTONE INDIETRO posizionato in alto a sinistra con margine -->
    <Button fx:id="backButton" onAction="#backPage" style="-fx-background-color: #FF7043; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 18;" text="Indietro" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
        <effect>
            <DropShadow color="#00000075" />
        </effect>
    </Button>

    <!-- LAYOUT CENTRALE -->
    <VBox alignment="CENTER" maxHeight="800" maxWidth="800" prefHeight="600" prefWidth="450" spacing="25" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="80">
        <children>
            <!-- HEADER CARD -->
            <VBox alignment="CENTER" maxWidth="450" prefWidth="450" spacing="8" style="-fx-background-color: #f57c3c; -fx-background-radius: 16 16 0 0; -fx-padding: 25 30 25 30;">
                <children>
                    <Label style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ“š Biblioteca UNISA" />
                    <Label style="-fx-font-size: 14; -fx-text-fill: #ffe0b2;" text="Inserimento Studente" />
                </children>
            </VBox>

            <!-- CARD CENTRALE FORM -->
            <VBox alignment="CENTER" maxWidth="450" prefWidth="450" spacing="18" style="-fx-background-color: white; -fx-background-radius: 0 0 16 16; -fx-padding: 40 30 40 30;">
                <effect>
                    <DropShadow color="#00000033" offsetY="4" radius="20" />
                </effect>
                <children>
                    <!-- Nome -->
                    <TextField fx:id="name" maxWidth="250" prefWidth="250" promptText="Nome" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <!-- Cognome -->
                    <TextField fx:id="surname" maxWidth="250" prefWidth="250" promptText="Cognome" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <!-- Email -->
                    <TextField fx:id="email" maxWidth="250" prefWidth="250" promptText="Email" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <!-- Matricola -->
                    <TextField fx:id="numberID" maxWidth="250" prefWidth="250" promptText="Matricola" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043; -fx-border-width: 1; -fx-padding: 5;" />
                    <!-- Bottone Aggiungi -->
                    <Button fx:id="addButton" maxWidth="250" onAction="#addUser" prefWidth="250" style="-fx-background-color: #FF7043; -fx-text-fill: white;  -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14;" text="Aggiungi">
                        <effect>
                            <DropShadow color="#00000033" radius="5" />
                        </effect>
                    </Button>
                    <!-- Footer -->
                    <Label fx:id="labelErrore" style="-fx-font-size: 12; -fx-text-fill: #777;" text="UniversitÃ  degli Studi di Salerno" />
                </children>
            </VBox>

        </children>
    </VBox>

</AnchorPane>
