                <TextField fx:id="nomeField" maxWidth="250" prefWidth="250" promptText="Nome" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #FF7043;                                    -fx-border-width: 1;                                    -fx-padding: 5;" />

